<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EconLearn</title>
    
    {% if app.environment == 'dev' %}
        {# Development #}
        <script type="module" src="http://localhost:5173/@vite/client"></script>
        <script type="module" src="http://localhost:5173/src/main.jsx"></script>
    {% else %}
        {# Production: Read from manifest.json #}
        {% set manifest = source('build/manifest.json')|json_decode %}
        {% if manifest['src/main.jsx'] is defined %}
            {% if manifest['src/main.jsx'].css is defined %}
                {% for css in manifest['src/main.jsx'].css %}
                    <link rel="stylesheet" href="/build/{{ css }}">
                {% endfor %}
            {% endif %}
            <script type="module" src="/build/{{ manifest['src/main.jsx'].file }}"></script>
        {% endif %}
    {% endif %}
</head>
<body>
    <div id="app" data-page="{{ page|json_encode|e('html_attr') }}"></div>
</body>
</html>